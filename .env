MPESA_PASSKEY=yourpasskey
MPESA_ENVIRONMENT=sandbox
MPESA_CALLBACK_URL=http://localhost:8000/api/v1/integrations/webhooks/mpesa/

# Email
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
